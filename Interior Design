#include <iostream>
using namespace std;

int main() {
    int T;
    cin>>T;
    while(T--){
        int X1,Y1,X2,Y2,A,B;
        cin>>X1>>Y1>>X2>>Y2;
        A=X1+Y1;
        B=X2+Y2;
        if(B>A){
            cout<<A<<endl;
        }
        else {
            cout<<B<<endl;
        }
    }

	return 0;
}
